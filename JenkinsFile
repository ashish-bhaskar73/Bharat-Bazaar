pipeline {
    agent {
        docker {
            image 'node:14' // Use the Node.js 14 Docker image
            args '--user root' // This may be necessary if you need root privileges
        }
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Server') {
            steps {
                dir('server') {
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }

        stage('Build Client') {
            steps {
                dir('client') {
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }

        stage('Run Tests') {
            steps {
                dir('server') {
                    sh 'npm test'
                }
            }
        }

        stage('Deployment') {
            when {
                branch 'master' // Only deploy on the main branch
            }
            steps {
                dir('server') {
                    sh 'npm run deploy' // Custom deploy script
                }
            }
        }
    }
}
